{
  "template": "false-dichotomy-forums-*",
  "settings": {
    "number_of_shards": 1,
    "index.mapper.dynamic": false
  },
  "mappings": {
    "posts": {
      "properties": {
        "content": {
          "type": "text"
        },
        "created": {
          "type": "long"
        },
        "updated": {
          "type": "long"
        },
        "author": {
          "type": "keyword"
        },
        "thread": {
          "type": "keyword"
        }
      }
    },
    "threads": {
      "properties": {
        "thread_name": {
          "type": "text"
        },
        "board": {
          "type": "keyword"
        },
        "author": {
          "type": "keyword"
        },
        "created": {
          "type": "long"
        }
      }
    },
    "boards": {
      "properties": {
        "board_name": {
          "type": "keyword"
        }
      }
    }
  }
}
